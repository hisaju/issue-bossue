<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-wrap w-full mb-4 flex-col items-center text-center">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900">ボシューリスト</h1>
      <p class="lg:w-1/2 w-full leading-relaxed text-gray-500">イシューをやってくれる人をボシュー、やれそうなイシューは今すぐ応募</p>
    </div>
    <%= button_to 'イシューをボシュー', new_user_bossue_path, class: 'flex mx-auto mt-4 mb-10 text-white bg-black border-0 py-2 px-8 focus:outline hover:bg-gray-700 rounded text-lg', method: :get %>
    <div class="flex flex-wrap -m-4">
      <% @bossues.each do |bossue| %>
        <div class="xl:w-1/3 md:w-1/2 p-4">
          <%= link_to user_bossue_path(bossue) do %>
            <div class="border border-gray-200 p-6 rounded-lg hover:bg-gray-100">
              <div class="flex items-center justify-between">
                <%= image_tag bossue.user.thumbnail_url, class: 'w-10 h-10 rounded-full bg-indigo-100 text-indigo-500 mb-4' %>
                <% if bossue.status == 'open' %>
                  <div class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400">
                    <%= bossue.status_i18n %>
                  </div>
                  <% elsif bossue.status == 'closed' %>
                    <div class="bg-red-100 text-red-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-red-400 border border-red-400">
                      <%= bossue.status_i18n %>
                    </div>
                  <% elsif bossue.status == 'matched' %>
                    <div class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-green-400 border border-green-400">
                      <%= bossue.status_i18n %>
                    </div>
                  <% end %>
              </div>
              <h2 class="text-lg text-gray-900 font-medium title-font mb-2"><%= bossue.title %></h2>
              <p class="leading-relaxed text-base"><%= bossue.bossue_sentence %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
