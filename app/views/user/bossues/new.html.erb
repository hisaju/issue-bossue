<div class="p-8 rounded border border-gray-200">
  <h1 class="font-medium text-2xl">ボシュー新規追加</h1>
  <p class="text-gray-600 mt-6">ボシューしたいリポジトリとイシューを追加</p>

  <%= form_with(model: [:user, @bossue], local: true) do |f| %>
    <div class="mt-8 grid lg:grid-cols-1 gap-4" data-controller="issue">
      <div>
        <%= f.label :repository_id, 'リポジトリ', class: "text-sm text-gray-700 block mb-1 font-medium" %>
        <%= f.select :repository_id, options_for_select(@repositories), { include_blank: '選択してください' }, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full", data: {action: "change->issue#onChange"} %>
      </div>

      <div>
        <%= f.label :issue_id, 'イシュー', class: "text-sm text-gray-700 block mb-1 font-medium" %>
        <%= f.select :issue_id, {}, { include_blank: '選択してください' }, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full", data: {'issue-target': 'issueSelect'} %>
      </div>

      <div>
        <label for="job" class="text-sm text-gray-700 block mb-1 font-medium">Job title</label>
        <input type="text" name="job" id="job" class="bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full" placeholder="(ex. developer)" />
      </div>

      <div>
        <label for="brithday" class="text-sm text-gray-700 block mb-1 font-medium">Birthday</label>
        <input type="text" name="brithday" id="brithday" class="bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full" placeholder="(01/01/1993)" />
      </div>
    </div>

    <div class="space-x-4 mt-8">
      <button type="submit" class="py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 active:bg-blue-700 disabled:opacity-50">Save</button>

      <!-- Secondary -->
      <button class="py-2 px-4 bg-white border border-gray-200 text-gray-600 rounded hover:bg-gray-100 active:bg-gray-200 disabled:opacity-50">Cancel</button>
    </div>
  <% end %>
</div>
