<%= form_with(model: [:user, bossue], local: true, data: {turbo: false}) do |f| %>
  <div class="mt-8 grid lg:grid-cols-1 gap-4" data-controller="issue">
    <div>
      <%= f.label :repository_id, 'リポジトリ', class: "text-sm text-gray-700 block mb-1 font-medium" %>
      <%= f.select :repository_id, options_for_select(repositories), { include_blank: '選択してください' }, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full", data: {action: "change->issue#onChange"}, id: "repository_id" %>
    </div>
    <div>
      <%= f.label :issue_number, 'イシュー', class: "text-sm text-gray-700 block mb-1 font-medium" %>
      <%= f.select :issue_number, {}, { include_blank: '選択してください' }, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full", data: {'issue-target': 'issueSelect', action: 'change->issue#onSetIssue'} %>
    </div>

    <div>
      <%= f.label :title, 'タイトル', class: "text-sm text-gray-700 block mb-1 font-medium" %>
      <%= f.text_field :title, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full", placeholder: "(ex. ボシュータイトル)", data: {'issue-target': 'issueTitle'} %>
    </div>

    <div>
      <%= f.label :bossue_sentence, 'ボシュー文', class: "text-sm text-gray-700 block mb-1 font-medium" %>
      <%= f.text_field :bossue_sentence, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full", placeholder: "(ex. ボシュー文)" %>
    </div>

    <div>
      <%= f.label :content, 'イシューの内容', class: "text-sm text-gray-700 block mb-1 font-medium" %>
      <%= f.text_area :content, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full", placeholder: "(ex. イシューの内容)", rows: 10, data: {'issue-target': 'issueContent'} %>
    </div>
  </div>
  <div class="space-x-4 mt-8 flex justify-center">
    <button type="submit" class="py-2 px-4 bg-black text-white rounded hover:bg-gray-600 active:bg-gray-700 disabled:opacity-50">ボシューする</button>
  </div>
<% end %>
